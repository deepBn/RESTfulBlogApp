<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header ">
        Edit Blog <%= blog["title"] %>
    </div>
    <form action="/blogs/<%= blog["_id"] %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="blog[title]" id="title" value="<%= blog["title"] %>">
        </div>
        <div class="field">
            <label for="image">Image</label>
            <input type="text" name="blog[image]" id="image" value="<%= blog["image"] %>">
        </div>
        <div class="field">
            <label for="body">Blog Content</label>
            <textarea name="blog[body]" id="body" placeholder="Blog post goes here"><%- blog["body"] %></textarea>
        </div>
        <div class="field">
            <button type="submit" class="ui green basic button">Submit</button>
        </div>
    </form>
</div>

<% include partials/footer %>